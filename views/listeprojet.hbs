<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TuniWork</title>
   <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

  

  <link rel="stylesheet" href="./styles/style.css">
</head>

<body>

  <div class="flex flex-row ">


    {{>bar}}

<div class="w-full ">
    

    {{>nav}}
    <div class="bg-blue-50">
        <div class=" min-h-screen">
      <form method="post"  action="listeprojet">
          <div class="flex items-center justify-center">
            <div class="mx-auto mt-10 flex w-1/2 items-center rounded-lg border border-blue-700 bg-white" x-data="{ search: '' }">
              <div class="w-full">
                <input type="search" class="w-full rounded-full px-4 py-1 text-gray-800 focus:outline-none" name="searchQuery" placeholder="search" x-model="search" />
              </div>
              <div>
                <button type="submit" class="flex h-12 w-12 items-center justify-center rounded-r-lg bg-blue-500 text-white" :class="(search.length > 0) ? 'bg-blue-700' : 'bg-gray-500 cursor-not-allowed'" :disabled="search.length == 0">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
          </form>
          <div class="mx-10 mt-20">
            
              {{#each projet}}
              <div class="mt-4 w-auto rounded-xl border bg-white p-5 shadow-md mb-2">
                <div class="flex w-full items-center justify-between border-b pb-3">
                  <!-- User details code -->
                  <div class="flex items-center space-x-3">
                    <div class="rounded-full border">
                      <img src="/uploads/{{image_url}}" alt="" class="h-8 w-8 rounded-full" />
                    </div>
                    <div class="text-xs text-neutral-500">{{nom}}</div>
                    <div class="text-xs text-neutral-500">{{prenom}}</div>
                  </div>
                </div>
                <div class="mb-6 mt-4">
                  <div class="mb-3 text-xl font-bold">{{titre}}</div>
                  <div class="mx-2 text-sm text-neutral-600">{{description}}</div>
                </div>
                <div>
                  <div class="flex items-center justify-between text-slate-500">
                    <div class="flex space-x-4 md:space-x-8">
                      <div class="flex cursor-pointer items-center transition hover:text-slate-600">
                        <ion-icon class="mr-1.5 h-5 w-5" name="cash-outline"></ion-icon>
                        <span>{{prix}}</span><span> DT</span>
                      </div>
                      <div class="flex cursor-pointer items-center transition hover:text-slate-600">
                        <ion-icon class="mr-1.5 h-5 w-5" name="hourglass-outline"></ion-icon>
                        <span>{{projet.duree}}</span>
                      </div>
                    </div>
                    <div class="flex items-center space-x-8">
                        <form action="/supprimerprojet" method="POST">
                   <input type="hidden" name="userId" value="{{id}}">
                  <button class="rounded-full bg-blue-400 py-2 text-lg text-white p-3">Supprimer</button>
                  </form>
                      
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
            
          </div>
        </div>
    </div> 
      </div>
    </div>
  

  
  

  <script>
    function Menu(e){
      let list = document.querySelector('ul');
      e.name === 'menu' ? (e.name = "close",list.classList.add('top-[80px]') , list.classList.add('opacity-100')) üôÅ e.name = "menu" ,list.classList.remove('top-[80px]'),list.classList.remove('opacity-100'))
    }
  </script>
  <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script>

</body>

</html>